{
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  },
  "compilerOptions": {
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@features/*": [
        "src/features/*"
      ]
    },
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "preserve",
    "sourceMap": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
      "codeceptjs"
    ],
    "lib": [
      "ESNext",
      "dom",
      "DOM.Iterable"
    ],
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "keyofStringsOnly": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
